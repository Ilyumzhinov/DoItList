<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:id="@+id/taskLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/nameTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="20dp">

                <TextView
                    android:id="@+id/lblNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Name"
                    android:textColor="#8ed2b9"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Enter task name"/>

                <TextView
                    android:id="@+id/lblNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="#8ed2b9"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/edtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Enter note"/>

            </LinearLayout>
            <TableLayout
                android:id="@+id/taskDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/nameTask"
                android:layout_marginHorizontal="30dp">
                <TableRow android:layout_marginVertical="20dp">
                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/list"/>
                    <TextView
                        android:text="Class"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:id="@+id/classID"/>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />
                <TableRow android:layout_marginVertical="20dp">
                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/alarm"/>
                    <TextView
                        android:text="Due Date"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:id="@+id/dueDate"/>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />
                <TableRow

                    android:layout_marginVertical="20dp">
                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/important"/>
                    <TextView
                        android:text="Priority"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:id="@+id/priority"/>

                </TableRow>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary" />
                <TableRow
                    android:onClick="highlight">
                    <ImageView
                        android:layout_height="30dp"
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/star"
                        android:layout_marginVertical="20dp"/>
                    <TextView
                        android:text="Highlight"
                        android:textSize="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_marginVertical="20dp"/>
                    <TextView
                        android:layout_weight="9"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:text="Make this task standout in today task"/>

                </TableRow>
                <LinearLayout
                    android:layout_gravity="center_horizontal">
                    <Button
                        android:id="@+id/btnSave"
                        android:layout_below="@+id/taskDetail"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textSize="15dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#fff"
                        android:onClick="saveTask"
                        android:background="@drawable/roundedbutton" />
                </LinearLayout>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>