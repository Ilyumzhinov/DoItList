<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:id="@+id/taskLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/nameTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="30dp">

                <LinearLayout
                    android:id="@+id/taskName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/lblNewTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Task Name"
                        android:textColor="@color/colorAccentLight"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtTaskName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter task name"
                        android:inputType="textPersonName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/taskName"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deadline"
                        android:textColor="@color/colorAccentLight"
                        android:textSize="20sp" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginVertical="20dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="0"
                            android:src="@drawable/alarm" />

                        <TextView
                            android:id="@+id/edtDueDate"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:hint="pick date/time"
                            android:inputType="datetime|date" />

                        <Button
                            android:id="@+id/btnDateTimePick"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="PickDate"
                            android:text="Pick" />

                    </TableRow>

                </LinearLayout>
            </RelativeLayout>

            <TableLayout
                android:id="@+id/taskDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTask"
                android:layout_margin="0dp"
                android:layout_marginHorizontal="30dp"
                android:divider="?android:attr/dividerHorizontal"
                android:orientation="vertical"
                android:showDividers="middle|end">

                <TableRow
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/list" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:text="Course"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/spnCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/important" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:text="Type"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/sonType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/alarm" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:text="Time est."
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtTimeEst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="time" />

                </TableRow>

                <TableRow
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:onClick="highlight">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginVertical="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:text="Highlight"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/chkHighlight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:src="@mipmap/ic_launcher_round" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0"
                        android:text="Notes"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtNotes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="anything important?"
                        android:inputType="textMultiLine" />

                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>