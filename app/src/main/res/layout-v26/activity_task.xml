<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:id="@+id/taskLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/nameTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:padding="20dp">

                <TextView
                    android:id="@+id/lblNewTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Name"
                    android:textColor="#8ed2b9"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edtTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter task name"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/lblNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="#8ed2b9"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/edtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Enter note"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/taskDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTask"
                android:layout_marginHorizontal="30dp"
                android:divider="@android:drawable/divider_horizontal_dim_dark"
                android:orientation="vertical">

                <TableRow
                    android:layout_marginVertical="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/list" />

                    <Spinner
                        android:id="@+id/spnClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                </TableRow>

                <TableRow
                    android:layout_marginVertical="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/alarm" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Due Date"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/edtDueDate"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:inputType="datetime|date" />

                </TableRow>

                <TableRow

                    android:layout_marginVertical="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="0"
                        android:src="@drawable/important" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Priority"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/edtPriority"
                        android:layout_width="0dp"
                        android:layout_weight="2" />

                </TableRow>

                <TableRow
                    android:gravity="center"
                    android:onClick="highlight">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginVertical="20dp"
                        android:layout_weight="0"
                        android:src="@drawable/star" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_marginVertical="20dp"
                        android:layout_weight="2"
                        android:text="Highlight"
                        android:textSize="20sp" />

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>